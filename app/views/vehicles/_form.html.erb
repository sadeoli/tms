<form>
<%= form_with model: @vehicle do |f|%>
  <div class="row mb-3">
    <%= f.label :license_plate, {class: "col-sm-2 col-form-label"}%>
    <div class="col-sm-10">
        <%= f.text_field :license_plate, {class: "form-control"}%>
    </div>
  </div>
    <div class="row mb-3">
    <%= f.label :model, {class: "col-sm-2 col-form-label"}%>
    <div class="col-sm-10">
        <%= f.text_field :model, {class: "form-control"}%>
    </div>
  </div>
    <div class="row mb-3">
    <%= f.label :brand, {class: "col-sm-2 col-form-label"}%>
    <div class="col-sm-10">
        <%= f.text_field :brand, {class: "form-control"}%>
    </div>
  </div>
    <div class="row mb-3">
    <%= f.label :max_weight, {class: "col-sm-2 col-form-label"}%>
    <div class="col-sm-10">
    <div class="input-group">
        <%= f.number_field :max_weight, {class: "form-control"}%>
        <span class="input-group-text">kg</span>
        </div>
    </div>
  </div>
    <div class="row mb-3">
    <%= f.label :manufacture_year, {class: "col-sm-2 col-form-label"}%>
    <div class="col-sm-10">
        <%= f.number_field :manufacture_year, {class: "form-control"}%>
    </div>
  </div>
    <div class="row mb-3">
        <%= f.label :transportation_modal_id, {class: "col-sm-2 col-form-label"}%>
        <div class="col-sm-10">
            <%= f.collection_select :transportation_modal_id, @transportation_modals, :id, :name, {class: "form-select"} %>
        </div>
    </div>
    <div class="row mb-3">
    <%= f.label :status, {class: "col-sm-2 col-form-label"}%>
    <div class="col-sm-10">
        <%= f.select(:status, Vehicle.statuses.keys) %>
    </div>
    </div>
  <div>
    <%= f.submit 'Cadastrar', {class:"btn btn-primary"} %>
  </div>
</form>
<% end %>